/* BASE STYLES */

*,
*:before,
*:after {
	box-sizing: inherit;
}
p,
dd,
dl,
figure,
blockquote {
	margin: 0;
}
blockquote,
q {
	quotes: none;
}
ul,
ol {
	margin: 0;
	padding: 0;
	list-style-type: none;
}
svg:not(:root) {
	overflow: visible;
}
.page,
html {
	width: 100%;
	height: 100%;
	box-sizing: border-box;
	margin: 0;
	padding: 0;
	line-height: 1;
	font-family: Hind, 'Helvetica Nue', Helvetica, serif;
	font-size: base-font-size;
	color: color.dark;
}

.container {
	width: 100%;
	max-width: 800px;
	margin: auto;
	padding: 0 (gutter / 2);
}

::selection {
	background-color: transparentify(color.accent, 0.5);
}