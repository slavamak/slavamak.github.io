/* BLOCK LATEST WORKS */

.latest-works {
  margin-top: 60px;
  margin-bottom: 60px;
}

.button.latest-works__button {
  font-size: 0;
  margin-left: (gutter * 0.75);
}

.button.latest-works__button span {
  display: inline-block;
  margin-bottom: -3px;
  font-size: 14px;
}

.latest-works-list {
  margin-top: gutter;
}

.latest-works-list__item {
  font-weight: normal;
  margin-left: -(gutter / 2);

  a {
    display: block;
    padding: 0.75rem 1rem;
    font-size: 0;
    color: color.nav;
    border-radius: 4px;

    &:hover {
      color: color.text;
      background-color: color.back;
    }
  }
  span {
    font-size: text-font-size;
    margin-bottom: -4px;
    display: inline-block;
    vertical-align: middle;
    line-height: 1.4;
  }
}

.latest-works-list__item-icon {
  display: inline-block;
  height: 24px;
  width: 24px;
  margin-right: (gutter / 4);
  vertical-align: middle;

  svg {
    width: 100%;
    height: 100%;
  }
}