/* BLOCK HEADER */

.header {
  height: 60px;
  font-size: nav-font-size;
  font-weight: 500;
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  background-color: color.light;
  will-change: height;
  transition: height 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.header.scroll {
  height: 60px;
}

+min(sm)
  .header {
    height: 90px;
  }

.header__container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
}

.header__logo {
  align-items: center;
  display: flex;
  text-decoration: none;
  color: inherit;

  img {
    width: 32px;
    margin-right: 16px;
  }

  span {
    margin-bottom: -2px;
  }
}

.header__nav {
  margin-left: auto;
  margin-right: gutter;
  margin-bottom: -3px;
  color: color.nav;
}

.header__email {
  font-size: 0;
}