/* BLOCK HERO */

.hero {
  padding-top: 60px;
  padding-bottom: 60px;
  margin-top: 60px;
  background-color: color.accent;
}

+min(sm)
  .hero {
    margin-top: 90px;
  }

.hero__container {
  display: flex;
  align-items: center;
  flex-direction: column;
}

+min(sm)
  .hero__container {
    flex-direction: row;
  }

.hero-content {
  width: 100%;
  text-align: center;

  &__heading {
    margin: (gutter/1.3325) 0;
  }

  &__description {
    font-size: text-font-size;
    line-height: 1.6;
    color: color.text;
  }

  &__greeting {
    font-size: 1.5rem;
  }

  &__links {
    margin-top: gutter;
  }

  &__links-item {
    text-decoration: none;
    margin-right: (gutter/2);

    &:last-child {
      margin-right: 0;
    }

    &:hover {
      fill: transparentify(color.dark, 0.7);
    }
  }
}

+min(sm)
  .hero-content {
    width: 60%;
    margin-right: gutter;
    text-align: left;
  }

+max(sm)
  .hero-content {
    order: 2;
    margin-top: gutter;
  }

.hero-card {
  width: 100%;
  text-align: center;
}

+min(sm)
  .hero-card {
    width: 40%;
  }

.hero-card__avatar {
  width: 100%;
  max-width 260px;
  border-radius: 50%;
  border: color.dark solid 6px;
  box-shadow: transparentify(color.dark, 0.2) 5px 12px 8px;
}

+min(sm)
  .hero-card__avatar {
    max-width: 100%;
  }