/* MIXINS */

min(val)
	if val is a 'unit'
		@media (min-width: unit(val, 'px'))
			{block}
	else
		@media (min-width: bp[val])
			{block}

max(val)
	if val is a 'unit'
		@media (max-width: unit(val, 'px'))
			{block}
	else
		@media (max-width: bp[val])
			{block}

webfont(family, file, weight = normal, style = normal)
	@font-face
		font-family family
		src url('../fonts/' + file + '.woff2') format('woff2'),
				url('../fonts/' + file + '.woff') format('woff'),
				url('../fonts/' + file + '.ttf') format('truetype')
		font-weight weight
		font-style style