{
	"name": "slavamak-website",
	"version": "2.0.0",
	"description": "My website",
	"main": "index.html",
	"author": "github.com/slavamak",
	"license": "MIT",
	"browserslist": "> 0.5%, last 3 versions",
	"scripts": {
		"dev": "gulp build",
		"prod": "rimraf dist && cross-env NODE_ENV=production gulp prod",
		"deploy": "git subtree push --prefix dist origin gh-pages",
		"styles:lint": "stylelint \"source/styles/**/*.scss\" ",
		"styles:format": "stylelint \"source/styles/**/*.scss\" --fix --config ./.stylelintrc-extend"
	},
	"devDependencies": {
		"autoprefixer": "^9.6.1",
		"browser-sync": "^2.26.7",
		"cross-env": "^6.0.0",
		"css-properties-sorting": "^1.0.10",
		"gulp": "^4.0.2",
		"gulp-csso": "^3.0.1",
		"gulp-favicons": "^2.3.1",
		"gulp-if": "^3.0.0",
		"gulp-imagemin": "^6.1.1",
		"gulp-include": "^2.4.1",
		"gulp-postcss": "^8.0.0",
		"gulp-pug": "^4.0.1",
		"gulp-rename": "^1.4.0",
		"gulp-sass": "^4.0.2",
		"gulp-sourcemaps": "^2.6.5",
		"gulp-svg-sprite": "^1.5.0",
		"gulp-svgmin": "^2.2.0",
		"gulp-uglify": "^3.0.2",
		"gulp.spritesmith": "^6.11.0",
		"husky": "^3.0.7",
		"imagemin-pngquant": "^8.0.0",
		"lint-staged": "^9.4.0",
		"rimraf": "^3.0.0",
		"stylelint": "^11.0.0",
		"stylelint-order": "^3.1.1",
		"stylelint-selector-no-empty": "^1.0.7"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.scss": [
			"stylelint --fix --config ./.stylelintrc-extend",
			"git add"
		]
	}
}
